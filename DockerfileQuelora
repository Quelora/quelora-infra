FROM node:20-slim

# 1. Instala Chrome y dependencias
RUN apt-get update && \
    apt-get install -y wget gnupg && \
    wget -q -O - https://dl.google.com/linux/linux_signing_key.pub | apt-key add - && \
    sh -c 'echo "deb [arch=amd64] http://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google.list' && \
    apt-get update && \
    apt-get install -y google-chrome-stable fonts-ipafont-gothic fonts-wqy-zenhei fonts-thai-tlwg fonts-kacst fonts-freefont-ttf libxss1 --no-install-recommends && \
    rm -rf /var/lib/apt/lists/*

# 2. Configura Puppeteer
ENV PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
ENV PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome

# 3. Configura el workspace
WORKDIR /usr/src/app

# 4. Copia e instala dependencias
COPY ./source/quelora-api/package.json .
COPY ./source/quelora-api/package-lock.json* ./
RUN npm install --unsafe-perm

# 5. Copia el resto del c√≥digo
COPY ./source/quelora-api .

# 6. Configura usuario no-root
RUN chown -R node:node /usr/src/app
USER node

EXPOSE 3000
CMD ["npx", "nodemon", "app.js"]